{
	"id": "com.athom.zevercloud",
	"version": "0.0.8",
	"compatibility": ">=1.5.0",
	"sdk": 2,
	"name": {
		"en": "ZeverCloud Solar Power"
	},
	"description": {
		"en": "Read solar output from zeversolar/zervercloud"
	},
	"tags": {
		"en": [
			"solar",
			"energy",
			"sun"
		]
	},
	"category": [
		"energy"
	],
	"permissions": [],
	"bugs": {
		"url": "https://github.com/biemond/com.athom.zevercloud/issues"
	},
	"source": "https://github.com/biemond/com.athom.zevercloud",
	"support": "mailto:biemond@gmail.com",
	"images": {
		"large": "/assets/images/solar-panels.jpg",
		"small": "/assets/images/solar-panels-small.jpg"
	},
	"author": {
		"name": "Edwin Biemond",
		"email": "biemond@gmail.com"
	},
	"capabilities": {
		"measure_power": {
			"type": "number",
			"title": {
				"en": "Current Power"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "W"
			},
			"min": 0,
			"max": 20000,
			"icon": "/assets/images/power.svg",
			"insights": true
		},
		"measure_e-total-today": {
			"type": "number",
			"title": {
				"en": "E-Today"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "kWh"
			},
			"min": 0,
			"max": 100,
			"decimals": 2,
			"icon": "/assets/images/etoday.svg",
			"insights": true
		},
		"measure_e-total-month": {
			"type": "number",
			"title": {
				"en": "E-Month"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "kWh"
			},
			"min": 0,
			"max": 2000,
			"decimals": 2,
			"icon": "/assets/images/etoday.svg"
		},
		"measure_e-total": {
			"type": "number",
			"title": {
				"en": "E-total"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "kWh"
			},
			"min": 0,
			"max": 100000,
			"decimals": 2,
			"icon": "/assets/images/etoday.svg"
		},
		"latest_upload_date": {
			"type": "string",
			"title": {
				"en": "Latest update date"
			},
			"getable": true,
			"setable": false,
			"icon": "/assets/images/clock.svg"
		}
	},
	"flow": {
		"triggers": [
			{
				"id": "PowerAbove100W",
				"title": {
					"en": "When generated power by the plant is above 100W"
				},
				"hint": {
					"en": "Triggers when the plant generated power is above 100W"
				},
				"tokens": [
					{
						"name": "power",
						"type": "number",
						"title": {
							"en": "ActualPower"
						},
						"example": {
							"en": "101"
						}
					},
					{
						"name": "plant",
						"type": "string",
						"title": {
							"en": "Plant"
						},
						"example": {
							"en": "p7gmw"
						}
					}
				]
			},
			{
				"id": "PowerAbove500W",
				"title": {
					"en": "When generated power by the plant is above 500W"
				},
				"hint": {
					"en": "Triggers when the plant generated power is above 500W"
				},
				"tokens": [
					{
						"name": "power",
						"type": "number",
						"title": {
							"en": "ActualPower"
						},
						"example": {
							"en": "101"
						}
					},
					{
						"name": "plant",
						"type": "string",
						"title": {
							"en": "Plant"
						},
						"example": {
							"en": "p7gmw"
						}
					}
				]
			},
			{
				"id": "PowerAbove1000W",
				"title": {
					"en": "When generated power by the plant is above 1000W"
				},
				"hint": {
					"en": "Triggers when the plant generated power is above 1000W"
				},
				"tokens": [
					{
						"name": "power",
						"type": "number",
						"title": {
							"en": "ActualPower"
						},
						"example": {
							"en": "101"
						}
					},
					{
						"name": "plant",
						"type": "string",
						"title": {
							"en": "Plant"
						},
						"example": {
							"en": "p7gmw"
						}
					}
				]
			},
			{
				"id": "PowerIs0W",
				"title": {
					"en": "No power is generated by the plant"
				},
				"hint": {
					"en": "Triggers when there is no power generated by the plant"
				},
				"tokens": [
					{
						"name": "power",
						"type": "number",
						"title": {
							"en": "NoPower"
						},
						"example": {
							"en": "0"
						}
					},
					{
						"name": "plant",
						"type": "string",
						"title": {
							"en": "Plant"
						},
						"example": {
							"en": "p7gmw"
						}
					}
				]
			}
		],
		"conditions": [
			{
				"id": "is_generating",
				"title": {
					"en": "It !{{is|isn't}} generating power:"
				},
				"hint": {
					"en": "Are we generating or not"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=plant"
					}
				]
			},
			{
				"id": "generating_output",
				"title": {
					"en": "level of generating power:"
				},
				"hint": {
					"en": "Description of the power output."
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=plant"
					},
					{
						"name": "argument_main",
						"type": "dropdown",
						"values": [
							{
								"id": "minimal",
								"label": {
									"en": "minimal, under 100W"
								}
							},
							{
								"id": "ok",
								"label": {
									"en": "between 100 & 500W"
								}
							},
							{
								"id": "better",
								"label": {
									"en": "between 500 & 1000W"
								}
							},
							{
								"id": "nice",
								"label": {
									"en": "between 1000 & 1500W"
								}
							},
							{
								"id": "super",
								"label": {
									"en": "between 1500 & 2000W"
								}
							},
							{
								"id": "chill",
								"label": {
									"en": "between 2000 & 3000W"
								}
							},
							{
								"id": "awesome",
								"label": {
									"en": "between 3000 & 4000W"
								}
							},
							{
								"id": "moneymaker",
								"label": {
									"en": "above 4000W"
								}
							}
						]
					}
				]
			}
		]
	},
	"drivers": [
		{
			"id": "plant",
			"name": {
				"en": "plant"
			},
			"class": "solarpanel",
			"capabilities": [
				"measure_power",
				"measure_e-total-today",
				"measure_e-total-month",
				"measure_e-total",
				"latest_upload_date"
			],
			"energy": {
			},
			"capabilitiesOptions": {},
			"pair": [
				{
					"id": "pair"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "General settings"
					},
					"children": [
						{
							"id": "apikey",
							"type": "text",
							"label": {
								"en": "ZeverCloud API key"
							},
							"value": "...",
							"hint": {
								"en": "Enter the API key of your ZeverSolar plant here."
							}
						}
					]
				}
			],
			"images": {
				"large": "/drivers/plant/assets/images/solar-panels.jpg",
				"small": "/drivers/plant/assets/images/solar-panels-small.jpg"
			}
		}
	]
}